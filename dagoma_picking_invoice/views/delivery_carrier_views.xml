<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="label_to_print_delivery_carrier_form_view" model="ir.ui.view">
    <field name="name">label.to.print.delivery.carrier.form</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='integration_level']" position="after">
            <field name="label_to_print"/>
            <!-- <field name="picking_ready" string="Picking ready to be processed"/>
            <button name="create_batch" string="Create Batch" type="object" attrs="{'invisible': [('picking_ready', '=', 0)]}"/> -->
        </xpath>
    </field>
</record>

<record id="create_batch_delivery_carrier_list_view" model="ir.ui.view">
    <field name="name">create.batch.delivery.carrier.list</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
    <field name="priority">99</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='website_published']" position="after">
            <field name="picking_ready" string="Picking ready to be processed"/>
            <button name="create_batch" string="Create Batch" type="object" attrs="{'invisible': [('picking_ready', '=', 0)]}"/>
        </xpath>
    </field>
</record>


</odoo>